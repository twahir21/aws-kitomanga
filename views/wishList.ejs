 <%- include('./includes/title') %>
 <style>
            * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        .wishlist-wrapper{
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #3f3e3e;
        }
        .wishlist-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 0 auto;
            max-width: 1200px;
        }
        .wishlist-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .wishlist-item:hover {
            transform: translateY(-5px);
        }
        .wishlist-image {
            width: auto;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        .wishlist-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }
        .wishlist-price {
            color: #28a745;
            font-size: 16px;
            margin-bottom: 15px;
        }
        .remove-btn {
            background-color: #fd7888;
            color: #fff;
            padding: 10px;
            border: none;
            font-weight: 600;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }
        .remove-btn:hover {
            background-color: #c82333;
        }
        /* Responsive Design */
        @media (max-width: 768px) {
            .wishlist-item {
                padding: 15px;
            }
            .wishlist-title {
                font-size: 16px;
            }
            .wishlist-price {
                font-size: 14px;
            }
            .remove-btn {
                font-size: 12px;
                padding: 8px;
            }
        }
 </style>

 <div class="wishlist-wrapper">
    <h1>My Wishlist</h1>
    <div class="wishlist-container" id="wishlistContainer"></div>
 </div>

    <script src="/js/wishlist.js"></script>
