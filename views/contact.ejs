<link rel="stylesheet" href="/css/contact.css">
<style>
/* Loader styling */
#loaderContact {
    display: none; /* Initially hidden */
    width: 40px;
    aspect-ratio: 1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1001; /* Higher than the overlay to stay visible */
}

#loaderContact:before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    --c: #0000, #ffffff 1deg 120deg, #0000 121deg; /* White loader */
    background:
        conic-gradient(from 0deg, var(--c)) top right,
        conic-gradient(from 120deg, var(--c)) bottom,
        conic-gradient(from 240deg, var(--c)) top left;
    background-size: 40px 40px;
    background-repeat: no-repeat;
    animation: l25 2s infinite cubic-bezier(0.3, 1, 0, 1);
}

/* Loader spinning animation */
@keyframes l25 {
    33% { inset: -8px; transform: rotate(0deg); }
    66% { inset: -8px; transform: rotate(180deg); }
    100% { inset: 0; transform: rotate(180deg); }
}

/* Overlay styling */
#overlayContact {
    display: none; /* Initially hidden */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9); /* Semi-transparent black overlay */
    z-index: 1000; /* Just below the loader */
}

</style>

<body>    


