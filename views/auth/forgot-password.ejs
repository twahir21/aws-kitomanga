<%- include('../includes/title') %>

<style>
    /* Overall body styles */
.forgot-container {
    font-family: 'Montserrat', sans-serif;
    background-color: #f4f4f4; /* Light background for contrast */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60vh; /* Full viewport height */
}

/* Login body styles */
.login-body {
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 40px 20px; /* Padding for form spacing */
    max-width: 400px; /* Maximum width */
    width: 100%; /* Full width */
    text-align: center;
}

/* Heading styles */
.login-body h1 {
    margin-bottom: 20px; /* Space below heading */
    color: #333; /* Dark color for the heading */
    font-size: 24px; /* Heading size */
}

/* Error message styles */
.login-body ul {
    list-style: none; /* Remove bullets */
    padding: 0; /* Remove padding */
    margin-bottom: 20px; /* Space below the error messages */
}

/* Input field styles */
.login-body input[type="email"] {
    width: 100%; /* Full width */
    padding: 12px; /* Padding for input */
    margin-bottom: 20px; /* Space below input */
    border: 1px solid #ddd; /* Light border */
    border-radius: 8px; /* Rounded corners */
    font-size: 14px; /* Font size */
    transition: border-color 0.3s; /* Smooth border color transition */
}

/* Focus state for input */
.login-body input[type="email"]:focus {
    border-color: #D71313; /* Highlight border on focus */
    outline: none; /* Remove default outline */
}

/* Button styles */
.login-body button {
    background-color: #D71313; /* Button background color */
    color: #fff; /* Button text color */
    padding: 12px; /* Padding for button */
    border: none; /* Remove default border */
    border-radius: 8px; /* Rounded corners */
    font-size: 16px; /* Button text size */
    cursor: pointer; /* Pointer on hover */
    transition: background-color 0.3s, transform 0.3s; /* Smooth transitions */
}

/* Hover effect for button */
.login-body button:hover {
    background-color: #0D1282; /* Change background color on hover */
    transform: translateY(-2px); /* Lift effect */
}

/* Responsive styles */
@media (max-width: 480px) {
    .login-body {
        padding: 20px; /* Less padding on smaller screens */
    }

    .login-body h1 {
        font-size: 20px; /* Smaller heading size */
    }
}

</style>
<link rel="stylesheet" href="/css/login.css">
<div class="forgot-container">
    <div class="login-body">
        <h1>Forgot Password</h1>
        <% if (errors && errors.length > 0) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li style="color:red;"><%= error.msg %></li>
                <% }); %>
            </ul>
        <% } %>
        <form action="/forgot-password" method="post">
            <input type="email" name="email" placeholder="Email" required>
            <button type="submit">Send Reset Link</button>
        </form>
    </div>
</div>
<%- include('../includes/footer.ejs') %>
